from collection import namedtuple

BashVariable = namedtuple("BashVariable", ['name', 'value'])

class SbatchEnviroment:
	def __init__(self, modules:List[str] = None,
	             variables:List[BashVariable] = None):
		self.modules = modules
		self.variables = variables

	def get_env(self):
		enviroment = []

		enviroment += modules
		enviroment += [f"{variable.name}={variable.value}" for ]
